{
  "manifest_version": 3,
  "name": "X to Lark - 优质帖子收藏助手",
  "version": "1.0.0",
  "description": "将X(Twitter)上的优质帖子保存到飞书多维表格，支持AI智能打标签",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://open.feishu.cn/*",
    "https://*.feishu.cn/*",
    "https://api.deepseek.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": [
        "src/utils/extractor.js",
        "src/utils/thread-detector.js",
        "src/content/content.js"
      ],
      "css": ["src/content/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/dialog.html",
        "icons/icon16.png",
        "icons/icon32.png",
        "icons/icon48.png",
        "icons/icon128.png"
      ],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}
